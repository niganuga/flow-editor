{
  "compilerOptions": {
    // ✅ Target ES2022 for modern features (October 2025)
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "ES2022"],

    // ✅ Module system (October 2025 best practice)
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,

    // ✅ Strict type checking (TypeScript 5.9+)
    "strict": true,
    "noUncheckedIndexedAccess": true,          // Prevents undefined array access
    "exactOptionalPropertyTypes": true,        // Distinguishes undefined vs missing
    "noImplicitReturns": true,                 // All code paths must return
    "noFallthroughCasesInSwitch": true,        // Prevent switch fallthrough bugs
    "noImplicitOverride": true,                // Require explicit override keyword
    "noPropertyAccessFromIndexSignature": true, // Stricter object property access
    "noUncheckedSideEffectImports": true,      // TypeScript 5.9 feature

    // ✅ Advanced features (TypeScript 5.9+)
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,              // Better ESM/CJS handling

    // ✅ Performance & compatibility
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,

    // ✅ JSX & React 19
    "jsx": "preserve",
    "jsxImportSource": "react",

    // ✅ Next.js integration
    "plugins": [
      {
        "name": "next"
      }
    ],

    // ✅ Path aliases
    "paths": {
      "@/*": ["./*"]
    },

    // ✅ Type acquisition
    "types": ["node", "vitest/globals"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist",
    "build"
  ]
}
